<% layout("/layouts/boilerplate") %>
<div class="row">
    <h1 class="offset-3 col-6">Signup on Wanderlust</h1>
    <div class="col-6 offset-3" >
        <form action="/signup" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <lable for="username" class="form-lable">Username</lable>
                <input name="username"
                 id="username"
                 type="text"
                 class="form-control"
                 required>
                
                <div class="invalid-feedback">Looks good!</div>
            
            </div>

            <div class="mb-3">
                <lable for="email" class="form-lable">email</lable>
                <input name="email"
                 class="form-control" 
                 type="text"
                 id="email"
                 required>
            </div>

            <div class="mb-3">
                <lable for="password" class="form-lable">password</lable>
                <input name="password"
                 class="form-control" 
                 type="password"
                 id="password"
                 required>
            </div>

            <button class="btn btn-success">Signup</button>
        </form>
    </div>
</div>